<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.esperrapp"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/esperr_face"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.esperrapp.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.esperrapp.ChangeToHappy"
            android:label="@string/title_activity_change_to_happy"
            android:parentActivityName="com.example.esperrapp.MainMenu"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esperrapp.MainMenu" />
        </activity>
        <activity
            android:name="com.example.esperrapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.esperrapp.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esperrapp.MainMenu" />
        </activity>
        <activity
            android:name="com.example.esperrapp.ChangeToSad"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_change_to_sad"
            android:parentActivityName="com.example.esperrapp.MainMenu"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esperrapp.MainMenu" />
        </activity>
        <activity
            android:name="com.example.esperrapp.ChangeToAngry"
            android:label="@string/title_activity_change_to_angry"
            android:parentActivityName="com.example.esperrapp.MainMenu"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esperrapp.MainMenu" />
        </activity>
        <activity
            android:name="com.example.esperrapp.ChangeToFull"
            android:label="@string/title_activity_change_to_full"
            android:parentActivityName="com.example.esperrapp.MainMenu"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.esperrapp.MainMenu" />
        </activity>
    </application>

</manifest>